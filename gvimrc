" Window size
set winwidth=50
let g:halfsize = 120
let g:fullsize = 120
set lines=40
let &columns = g:halfsize

" Font
set guifont=Monaco:h16.00

set fuoptions=maxhorz,maxvert,background:Normal

" No audible bell
set vb

" No toolbar
set guioptions-=T

" Use console dialogs
set guioptions+=c
hi normal guibg=black
set transp=8
